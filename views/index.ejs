<script type="module">
  import handleCookie from '/javascripts/cookieHandler.mjs';
  import shuffleReading from '/javascripts/shuffleReading.mjs'
  import dailyReading from '/javascripts/dailyReading.mjs'
  
  const inverted_cards = new handleCookie("inverted-cards",false,999);
  inverted_cards.handleInput("inverted-cards");
  const daily_readings = new handleCookie("daily-readings","3",999);
  daily_readings.handleInput("daily-readings");
  const interp_style = new handleCookie("interp-style","directed",999);
  interp_style.handleInput("interp-style");

  let lecture = shuffleReading(parseInt(daily_readings.getCookieValue()),inverted_cards.getCookieValue());
  dailyReading(lecture);
  
</script>

