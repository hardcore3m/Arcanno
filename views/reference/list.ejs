<!DOCTYPE html>
<html lang="pt-br">

<head>
  <title><%= title %></title>
  <%- include('../partials/head'); %>
</head>

<body>

  <header>
    <%- include('../partials/navbar'); %>
  </header>

  <main>
    <h2><%= title %></h2>

    <% books.forEach(function(book) { %>
    <div class="book-card">
      <a href="/<%= book.id %>">
        <h3><%= book.title %></h3>
        <p><%=book.author %></p>
      </a>
    </div>
    <% }); %>

  </main>

  <footer>
    <%- include('../partials/footer'); %>
  </footer>

</body>
<%- include('../partials/scripts'); %>

</html>